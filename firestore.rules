rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Regra global: Permite leitura e escrita para qualquer usuário
    // AVISO: Em produção, você deve adicionar Autenticação (Firebase Auth)
    // e mudar isso para "if request.auth != null"
    
    match /{document=**} {
      allow read, write: if true;
    }
  }
}